{
  "manifest_version": 3,
  "name": "SviluppAbile",
  "version": "1.0",
  "description": "Lavori in corso...",
  "permissions": [
    "downloads",
    "scripting",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "img/icon128.png"
    }
  },
  
  "externally_connectable": {
  "matches": ["<all_urls>"]
}
}
